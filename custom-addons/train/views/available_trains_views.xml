<odoo>
    <record id="view_available_trains_tree" model="ir.ui.view">
        <field name="name">available.trains.tree</field>
        <field name="model">train.booking.route</field>
        <field name="arch" type="xml">
            <tree string="Available Trains">
                <field name="name"/>
                <field name="from_station_id"/>
                <field name="to_station_id"/>
                <field name="train_id"/>
            </tree>
        </field>
    </record>


    <record id="action_available_trains" model="ir.actions.act_window">
        <field name="name">Available Trains</field>
        <field name="res_model">train.booking.route</field>
        <field name="view_mode">tree</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">View available trains for different routes</p>
        </field>
    </record>

</odoo>