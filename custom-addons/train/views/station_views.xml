<odoo>
    <record id="view_station_form" model="ir.ui.view">
        <field name="name">station.form</field>
        <field name="model">train.booking.station</field>
        <field name="arch" type="xml">
            <form string="Train Station">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_station_tree" model="ir.ui.view">
        <field name="name">station.tree</field>
        <field name="model">train.booking.station</field>
        <field name="arch" type="xml">
            <tree string="Stations">
                <field name="name"/>
                <field name="code"/>
                <field name="active"/>
            </tree>
        </field>
    </record>


    <record id="action_station" model="ir.actions.act_window">
        <field name="name">Stations</field>
        <field name="res_model">train.booking.station</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create new stations</p>
        </field>
    </record>

</odoo>
