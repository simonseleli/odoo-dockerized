<odoo>


    <record id="action_train_passenger" model="ir.actions.act_window">
        <field name="name">Train Passengers</field>
        <field name="res_model">train.passenger</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="view_train_passenger_tree" model="ir.ui.view">
        <field name="name">train.passenger.tree</field>
        <field name="model">train.passenger</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="address"/>
            </tree>
        </field>
    </record>

    <record id="view_train_passenger_form" model="ir.ui.view">
        <field name="name">train.passenger.form</field>
        <field name="model">train.passenger</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="email"/>
                        <field name="phone"/>
                        <field name="address"/>
                    </group>
                    <group>
                        <field name="booking_ids" widget="one2many_list" options="{'no_create': True}" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
