<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Original booking form view (should be in a separate file if it's not already) -->
    <!-- <record id="view_booking_form" model="ir.ui.view">
        ... original view definition ...
    </record> -->

    <!-- Ticket Form View -->
    <record id="view_ticket_form" model="ir.ui.view">
        <field name="name">ticket.form</field>
        <field name="model">train.ticket</field>
        <field name="arch" type="xml">
            <form string="Train Ticket">
                <sheet>
                    <group>
                        <field name="ticket_number" readonly="1"/>
                        <field name="passenger_id" readonly="1"/>
                        <field name="train_id" readonly="1"/>
                        <field name="from_station_id" readonly="1"/>
                        <field name="to_station_id" readonly="1"/>
                        <field name="seat_count" readonly="1"/>
                        <field name="booking_date" readonly="1"/>
                    </group>
                    <group>
                        <field name="booking_id" widget="one2one_list" options="{'no_create': True}" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Ticket Tree View -->
    <record id="view_ticket_tree" model="ir.ui.view">
        <field name="name">ticket.tree</field>
        <field name="model">train.ticket</field>
        <field name="arch" type="xml">
            <tree string="Train Tickets">
                <field name="ticket_number"/>
                <field name="passenger_id"/>
                <field name="train_id"/>
                <field name="from_station_id"/>
                <field name="to_station_id"/>
                <field name="seat_count"/>
            </tree>
        </field>
    </record>

    <record id="action_ticket" model="ir.actions.act_window">
        <field name="name">Tickets</field>
        <field name="res_model">train.ticket</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>